{
    "version": 1,
    "disable_existing_loggers": true,
    "formatters": {
        "plain": {
            "format": "%(levelname)-8s - %(message)s"
        },
        "simple": {
            "format": "%(asctime)s [%(levelname)s] %(name)s: %(message)s"
        }
    },
    "handlers": {
        "stdout": {
            "class": "logging.StreamHandler",
            "level": "INFO",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        },
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "ERROR",
            "formatter": "simple",
            "stream": "ext://sys.stderr"
        },
        "file": {
            "class": "logging.FileHandler",
            "formatter": "simple",
            "filename": "rethon.log",
            "mode": "a"
        }
    },
    "loggers": {
        "rethon": {
            "level": "DEBUG",
            "handlers": [
                "stderr",
                "stdout",
                "file"
            ],
            "propagate": false
        },
        "tau": {
            "level": "DEBUG",
            "handlers": [
                "stderr",
                "stdout",
                "file"
            ],
            "propagate": false
        },
        "dd": {
            "level": "ERROR",
            "handlers": [
                "stderr",
                "stdout",
                "file"
            ],
            "propagate": false
        }
    }

}